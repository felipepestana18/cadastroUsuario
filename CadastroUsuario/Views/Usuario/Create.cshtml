@model Usuario
@{
    ViewData["Title"] = "Create";
}
<h1>Inserir</h1>

<form asp-controller="Funcionario" asp-action="Create" method="post">

    <div class="row">
        <div class="col">

            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" placeholder="Nome" />
            <span asp-validation-for="Nome"></span>
        </div>
        <div class="col">
            <label asp-for="SobreNome"></label>
            <input asp-for="SobreNome" class="form-control" placeholder="Sobrenome" />
            <span asp-validation-for="SobreNome"></span>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label asp-for="Cpf"></label>
            <input asp-for="Cpf" class="form-control" placeholder="CPF" />
            <span asp-validation-for="Cpf"></span>
        </div>
        <div class="col">

            <label asp-for="Salario"></label>
            <input asp-for="Salario" class="form-control" placeholder="Salário" />
            <span asp-validation-for="Salario"></span>
        </div>
    </div>
    <div>
            <label asp-for="Logradouro"></label>
            <input asp-for="Logradouro" class="form-control" placeholder="Logradouro" />
            <span asp-validation-for="Logradouro"></span>
    </div>
    <div class="row">
        <div class="col">
            <label asp-for="Cep"></label>
            <input asp-for="Cep" class="form-control" placeholder="Cep" />
            <span asp-validation-for="Cep"></span>
        </div>
        <div class="col">
            <label asp-for="Bairro"></label>
            <input asp-for="Bairro" class="form-control" placeholder="Salario" />
            <span asp-validation-for="Bairro"></span>
        </div>
    </div>
    <br>
    <button class="btn btn-primary ">Salvar</button>
</form>